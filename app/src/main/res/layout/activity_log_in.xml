<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:fontFamily="times"
        android:text="Enter Password Below:"
        android:textColor="#5a0c0c"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/getPasswordLogIn"
        android:layout_width="274dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="20dp"
        android:fontFamily="times"
        android:hint="Enter Password here:"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#000" />

    <ImageButton
        android:id="@+id/showPassLogIn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="22dp"
        android:background="#FFF"
        android:src="@drawable/showpassword"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp" />

    <TextView
        android:id="@+id/errorLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/getPasswordLogIn"
        android:layout_marginBottom="230dp"
        android:fontFamily="times"
        android:textColor="#FF0000"
        android:textSize="14dp"
        android:layout_alignLeft="@+id/getPasswordLogIn" />

    <Button
        android:id="@+id/LogInviamail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="166dp"
        android:text="Sign Up" />
</RelativeLayout>